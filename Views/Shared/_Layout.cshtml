<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Analytics Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .sidebar {
            height: 100vh;
            background: #0d6efd;
            color: white;
            padding-top: 20px;
        }
        .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px 15px;
        }
        .sidebar a:hover {
            background: rgba(255,255,255,0.2);
        }
        .content {
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 sidebar">
                <h4 class="px-3">📊 Dashboard</h4>
                <a href="/">Performance Overview</a>
                <hr class="bg-light" />
                <h6 class="px-3">Websites</h6>
                <a href="#">Website A</a>
                <a href="#">Website B</a>
                <a href="#">Website C</a>
                <a href="/Account/Logout" class="btn border btn-logout d-flex align-items-center gap-2 px-3 shadow-sm">
                    <i class="bi bi-box-arrow-right"></i>
                    <span>Logout</span>
                </a>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10 content">
                @RenderBody()
            </main>
        </div>
    </div>
</body>
</html>

<style>
    .btn-logout {
        border-radius: 8px;
        transition: all 0.2s ease-in-out;
    }
    .btn-logout:hover {
        background-color: #f8d7da;
        color: #dc3545;
        transform: translateY(-2px);
    }
</style>

