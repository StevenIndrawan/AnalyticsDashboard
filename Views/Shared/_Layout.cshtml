@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Analytics Dashboard</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        /* Sidebar */
        .sidebar {
            width: 220px;
            height: 100vh;
            background: #0d6efd;
            color: white;
            position: fixed;
            left: 0;
            top: 0;
            transition: all 0.3s;
            overflow: hidden;
        }
        .sidebar.collapsed {
            width: 70px;
        }
        .sidebar .link-text {
            transition: opacity 0.3s;
        }
        .sidebar.collapsed .link-text {
            opacity: 0;
            pointer-events: none;
        }
        .sidebar-header {
            font-size: 1rem;
            border-bottom: 1px solid rgba(255,255,255,0.2);
        }
        .sidebar .nav-link {
            color: #cfe2ff;
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px 15px;
            transition: all 0.2s;
        }
        .sidebar .nav-link:hover {
            background: rgba(255,255,255,0.15);
            color: #fff;
        }
        .sidebar .nav-link.active {
            background: rgba(255,255,255,0.25);
            color: #fff;
            font-weight: bold;
        }

        /* Content geser */
        .content {
            margin-left: 220px;
            transition: margin-left 0.3s;
        }
        .sidebar.collapsed ~ .content {
            margin-left: 70px;
        }

        /* Dark mode */
        body.dark-mode {
            background: #1e1e2f;
            color: #f5f5f5;
        }
        body.dark-mode .card {
            background: #2d2d3a;
            color: #f5f5f5;
        }
        body.dark-mode .navbar {
            background: #111827 !important;
        }
        body.dark-mode .sidebar {
            background: #111827;
        }
        body.dark-mode .sidebar .nav-link {
            color: #d1d5db;
        }
        body.dark-mode .sidebar .nav-link.active {
            background: #374151;
            color: #fff;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div id="sidebar" class="sidebar">
        <div class="sidebar-header d-flex justify-content-between align-items-center px-3 py-2">
            <span class="fw-bold text-white"><i class="bi bi-bar-chart"></i> <span class="link-text">Dashboard</span></span>
            <button id="toggleSidebar" class="btn btn-sm btn-outline-light">
                <i class="bi bi-list"></i>
            </button>
        </div>

        <ul class="nav flex-column mt-2">
            <li class="nav-item">
                <a class="nav-link @(ViewData["Title"]?.ToString() == "Dashboard" ? "active" : "")" href="/Dashboard/Index">
                    <i class="bi bi-house-door"></i> <span class="link-text">Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Dashboard/WebsiteA">
                    <i class="bi bi-globe"></i> <span class="link-text">Website A</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Dashboard/WebsiteB">
                    <i class="bi bi-globe2"></i> <span class="link-text">Website B</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Dashboard/WebsiteC">
                    <i class="bi bi-globe-americas"></i> <span class="link-text">Website C</span>
                </a>
            </li>
        </ul>
    </div>

    <!-- Content -->
    <div class="content">
        <!-- Navbar -->
        <nav class="navbar navbar-light bg-light border-bottom px-3 d-flex justify-content-between">
            <div>
                <button id="themeToggle" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-moon"></i> Dark
                </button>
            </div>
            <div class="d-flex align-items-center gap-3">
                <span class="text-muted">
                    <i class="bi bi-person-circle"></i>
                    Logged in as: <b>@HttpContextAccessor.HttpContext.Session.GetString("Username")</b>
                </span>
                <a href="/Account/Logout" class="btn btn-outline-danger btn-sm">Logout</a>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="p-4">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="text-center py-3 text-muted">
            © 2025 Analytics Dashboard
        </footer>
    </div>

    <!-- Scripts -->
    <script>
        // Sidebar toggle
        document.getElementById("toggleSidebar").addEventListener("click", function () {
            document.getElementById("sidebar").classList.toggle("collapsed");
        });

        // Dark mode
        const themeBtn = document.getElementById("themeToggle");
        themeBtn.addEventListener("click", () => {
            document.body.classList.toggle("dark-mode");
            if (document.body.classList.contains("dark-mode")) {
                themeBtn.innerHTML = '<i class="bi bi-brightness-high"></i> Light';
                localStorage.setItem("theme", "dark");
            } else {
                themeBtn.innerHTML = '<i class="bi bi-moon"></i> Dark';
                localStorage.setItem("theme", "light");
            }
        });
        window.addEventListener("DOMContentLoaded", () => {
            if (localStorage.getItem("theme") === "dark") {
                document.body.classList.add("dark-mode");
                themeBtn.innerHTML = '<i class="bi bi-brightness-high"></i> Light';
            }
        });
    </script>
</body>
</html>
