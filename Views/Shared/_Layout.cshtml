<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Analytics Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        html, body {
            margin: 0;
            height: 100%;
        }

        .wrapper {
            display: flex;
            min-height: 100vh; /* cukup, bukan height fix */
        }

        .sidebar {
            width: 240px;
            background: #0d6efd;
            color: white;
            padding: 20px;
        }

        .sidebar h4 {
            font-size: 18px;
            margin-bottom: 20px;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 8px 12px;
            border-radius: 6px;
            margin-bottom: 8px;
        }

        .sidebar a:hover {
            background: rgba(255,255,255,0.2);
        }

        .content-area {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .header {
            padding: 12px 20px;
            background: #fff;
            border-bottom: 1px solid #ddd;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .filters {
            padding: 12px 20px;
            background: #f8f9fa;
            border-bottom: 1px solid #ddd;
        }

        .main-content {
            flex-grow: 1;
            padding: 20px;
        }

        .footer {
            background: #f1f1f1;
            text-align: center;
            padding: 8px;
            font-size: 14px;
            margin-top: auto; /* selalu nempel bawah */
        }

        .btn-logout {
            border-radius: 6px;
            transition: all 0.2s ease-in-out;
        }
        .btn-logout:hover {
            background-color: #f8d7da;
            color: #dc3545;
            transform: translateY(-2px);
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav class="sidebar">
            <h4>📊 Dashboard</h4>
            <hr class="bg-light" />
            <a href="#">Website A</a>
            <a href="#">Website B</a>
            <a href="#">Website C</a>
        </nav>

        <!-- Content -->
        <div class="content-area">

            <div class="filters">
                @RenderSection("Filters", required: false)
            </div>

            <div class="main-content">
                @RenderBody()
            </div>

            <div class="footer">
                © 2025 Analytics Dashboard
            </div>
        </div>
    </div>
</body>
</html>
